---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Tags from '../../components/Tags.astro';
const pageTitle = "√çndice de etiquetas";
---
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
      transition: background 300ms ease;
    }
    .tag > a{
        text-decoration: none;
    }
    .tag:hover{
        border: 1px dotted #4c1d95;
    }
  </style>
<BaseLayout pageTitle={pageTitle}>
  <Tags />
</BaseLayout>
<script>
  const tags = document.querySelectorAll('.tag');
  tags.forEach(tag=>{
    tag.addEventListener('click',()=>{
        const ancore = tag.querySelector('a');
        window.location.href= window.location.href+`${ancore?.textContent}`
    })
  })
</script>